<mvc:View controllerName="dtt.sapui5.controller.HelloPanel"  xmlns="sap.m" xmlns:core="sap.ui.core" 
          xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Panel id="_IDGenPanel1" headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" 
            width="auto">
        <content>
            <Button id="bt1" text="{i18n>showHelloButtonText}" press=".onShowHello" 
                    class="sapUiSmallMarginEnd" >
            </Button>
            <Input id="_IDGenInput1" value="{/recipient/name}"
                    valueLiveUpdate="true" width="60%">
            </Input>
            <Text id="_IDGenText1" text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHighlight-asColor">
            </Text>
        </content>
    </Panel>
    <core:Fragment id="_IDGenFragment1" fragmentName="dtt.sapui5.view.Form01" type="XML">
    </core:Fragment>
</mvc:View>